{
    "compileOnSave": true,
    "compilerOptions": {
      "jsx": "react",
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "strict": true,
      "typeRoots": ["./src/types/", "./node_modules/@types"],
      "useUnknownInCatchVariables": false,
